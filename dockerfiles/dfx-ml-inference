FROM xilinx/kria-developer:latest as build
WORKDIR /workspace

RUN \
    git clone https://gitenterprise.xilinx.com/SOM/kria-dfx-apps.git -b xlnx_rel_v2022.1; \
    cd kria-dfx-apps ;\
    sed -i 's#"vvas-library-repo": "/usr/lib/"#"vvas-library-repo": "/usr/lib/aarch64-linux-gnu/"#g' src/dfx-ml-inference/config/*/aiinference.json ; 

ENV LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/opt/xilinx/dfx-ml-inference/lib"
